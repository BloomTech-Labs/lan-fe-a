{
  "env": {
    "browser": true,
    "es2021": true,
    "commonjs": true
  },
  "extends": ["eslint:recommended", "plugin:react/recommended", "prettier"],
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 12,
    "sourceType": "module",
    "allowImportExportEverywhere": true
  },
  "plugins": ["react"],
  "rules": {
    "quotes": ["warn", "single"],
    "semi": ["error", "always"],
    "indent": ["error", 2],
    "react/prop-types": 0,
    "no-unused-vars": ["warn", { "vars": "all", "args": "after-used" }]
  }
}
